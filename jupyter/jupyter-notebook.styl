/* ==UserStyle==
@name           Jupyter Notebook
@namespace      github.com/openstyles/stylus
@version        1.0.0
@description    Userstyle for Jupyter Notebook
@author         gnkm
==/UserStyle== */

@-moz-document url-prefix("http://127.0.0.1:8888/lab") {
    :root {
        /* colors */
        /* nuetral */
        --nuetral-50: #fafafa;
        --nuetral-100: #f5f5f5;
        --nuetral-200: #e5e5e5;
        --nuetral-300: #d4d4d4;
        --nuetral-400: #a3a3a3;
        --nuetral-500: #737373;
        --nuetral-600: #525252;
        --nuetral-900: #171717;
        /* yellow */
        --yellow-100: #fef9c3;
        --yellow-200: #fef08a;
        --yellow-300: #fde047;
        --yellow-400: #facc15;
        --yellow-500: #eab308;
        --yellow-600: #ca8a04;
        --yellow-700: #a16207;
        --yellow-800: #854d0e;
        --yellow-900: #713f12;
        /* original */
        --md-grey-50: #fafafa;
        --md-grey-100: #f5f5f5;
        --md-grey-200: #eeeeee;
        --md-grey-300: #e0e0e0;
        --md-grey-400: #bdbdbd;
        --md-grey-500: #9e9e9e;
        --md-grey-600: #757575;
        --md-grey-700: #616161;
        --md-grey-800: #424242;
        --md-grey-900: #212121;
        /* main */
        --jp-layout-color0: var(--nuetral-50);
        --jp-layout-color1: var(--nuetral-50);
        --jp-layout-color2: var(--nuetral-300);
        --jp-layout-color3: var(--nuetral-400);
        --jp-layout-color4: var(--nuetral-900);
    }
    .jp-MarkdownOutput { background-color: var(--nuetral-200); }
    .jp-OutputArea-output { background-color: var(--nuetral-200); }
    .jp-RenderedText[data-mime-type='application/vnd.jupyter.stderr'] {
        background: var(--jp-rendermime-error-background);
        padding-top: var(--jp-code-padding);
    }
    /**
     * "
     *  Using Zenburn color palette from the Emacs Zenburn Theme
     *  https://github.com/bbatsov/zenburn-emacs/blob/master/zenburn-theme.el
     *
     *  Also using parts of https://github.com/xavi/coderay-lighttable-theme
     * "
     * From: https://github.com/wisenomad/zenburn-lighttable-theme/blob/master/zenburn.css
     */
    .cm-s-jupyter .CodeMirror-gutters { background: #3f3f3f !important; }
    .cm-s-jupyter .CodeMirror-foldgutter-open, .CodeMirror-foldgutter-folded { color: #999; }
    .cm-s-jupyter .CodeMirror-cursors { border-left: 1px solid white; background-color: var(--nuetral-100); }
    .cm-s-jupyter.CodeMirror { background-color: var(--nuetral-500) !important; color: #dcdccc !important; }
    .cm-s-jupyter span.cm-builtin { color: #dcdccc; font-weight: bold; }
    .cm-s-jupyter span.cm-comment { color: #7f9f7f; }
    .cm-s-jupyter span.cm-keyword { color: #f0dfaf; font-weight: bold; }
    .cm-s-jupyter span.cm-atom { color: #bfebbf; }
    .cm-s-jupyter span.cm-def { color: #dcdccc; }
    .cm-s-jupyter span.cm-variable { color: #dfaf8f; }
    .cm-s-jupyter span.cm-variable-2 { color: #dcdccc; }
    .cm-s-jupyter span.cm-string { color: #cc9393; }
    .cm-s-jupyter span.cm-string-2 { color: #cc9393; }
    .cm-s-jupyter span.cm-number { color: #dcdccc; }
    .cm-s-jupyter span.cm-tag { color: #93e0e3; }
    .cm-s-jupyter span.cm-property { color: #dfaf8f; }
    .cm-s-jupyter span.cm-attribute { color: #dfaf8f; }
    .cm-s-jupyter span.cm-qualifier { color: #7cb8bb; }
    .cm-s-jupyter span.cm-meta { color: #f0dfaf; }
    .cm-s-jupyter span.cm-header { color: #f0efd0; }
    .cm-s-jupyter span.cm-operator { color: #f0efd0; }
    .cm-s-jupyter span.CodeMirror-matchingbracket { box-sizing: border-box; background: transparent; border-bottom: 1px solid; }
    .cm-s-jupyter span.CodeMirror-nonmatchingbracket { border-bottom: 1px solid; background: none; }
    .cm-s-jupyter .CodeMirror-activeline { background: var(--nuetral-500); }
    .cm-s-jupyter .CodeMirror-activeline-background { background: var(--nuetral-500); }
    .cm-s-jupyter div.CodeMirror-selected { background: var(--yellow-700); }
    .cm-s-jupyter .CodeMirror-focused div.CodeMirror-selected { background: var(--yellow-600); }
}
