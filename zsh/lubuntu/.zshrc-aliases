alias ls='ls --color=auto'
alias ll='ls -lB'
alias la='ls -la'
alias kbd-default='setxkbmap -config ~/.keyboard/kbd-default.conf'
alias kbd-hhkb-en='setxkbmap -config ~/.keyboard/kbd-hhkb-en.conf'
# output の引数は xrandr -q で確認のこと
alias xdisp-on='xrandr --output VGA1 --right-of LVDS1 --mode 1920x1080 --primary'
alias xdisp-off='xrandr --output VGA1 --off'
