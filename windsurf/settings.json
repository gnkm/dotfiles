{
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "PlemolJP",
    "editor.wordWrap": "on",
    "editor.fontSize": 16,
    "workbench.colorCustomizations": {
        "editorGroup.border": "#ffffff",
        "tab.activeBorder": "#00aa00",
        "window.activeBorder": "#00aa00",
        "window.inactiveBorder": "#aa0000"
    },
    "terminal.integrated.profiles.osx": {
        "fish": {
            "path": "/opt/homebrew/bin/fish",
            "args": [
                "-l"
            ]
        }
    },
    "terminal.integrated.defaultProfile.osx": "fish",
    "workbench.iconTheme": "material-icon-theme",
    "emmet.syntaxProfiles": {
        "html": {
            "filters": "html,c"
        }
    },
    "emmet.preferences": {
        "filter.commentAfter": "<!-- /[#ID][.CLASS] -->"
    },
    "editor.accessibilitySupport": "off",
    "workbench.startupEditor": "none",
    "editor.renderWhitespace": "all",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "yaml": false,
        "python": true,
        "novel": false
    },
    "editor.formatOnSave": true,
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "[mdx]": {
        "editor.formatOnSave": false
    },
    "git.openRepositoryInParentFolders": "never",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "never",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "notebook.markup.fontSize": 10,
    "markdown.preview.fontFamily": "PlemolJP",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
    "editor.fontVariations": false,
    "Novel.preview.lineLength": 41,
    "Novel.preview.linesPerPage": 17,
    "workbench.colorTheme": "Zenburn Dark Matter - Warm - Sulfur",
    "terminal.external.osxExec": "iTerm.app",
    "haskell.manageHLS": "GHCup",
    "chat.editor.fontSize": 14,
    "codesnap.backgroundColor": "#ffffff",
    "codesnap.containerPadding": 0,
    "codesnap.target": "container",
    "codesnap.realLineNumbers": true,
    "codesnap.showWindowTitle": false,
    "continue.enableTabAutocomplete": false,
    "redhat.telemetry.enabled": false,
    "supermaven.enableFixWithSupermaven": true,
    "supermaven.enable": {
        "*": false
    },
    "windsurf.autocompleteSpeed": "fast",
    "workbench.preferredDarkColorTheme": "Zenburn Dark Matter - Warm - Sulfur"
}