{
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "Ricty Diminished",
    "editor.wordWrap": "on",
    "editor.fontSize": 16,
    "workbench.colorTheme": "Zenburn",
    "workbench.colorCustomizations": {
        "editorGroup.border": "#ffffff",
        "tab.activeBorder": "#00aa00",
        "window.activeBorder": "#00aa00",
        "window.inactiveBorder": "#aa0000"
    },
    "terminal.integrated.shell.osx": "/opt/homebrew/bin/fish",
    "workbench.iconTheme": "vscode-icons",
    "markdown-preview-enhanced-with-litvis.automaticallyShowPreviewOfMarkdownBeingEdited": false,
    "vsicons.dontShowNewVersionMessage": true,
    "python.showStartPage": false,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "emmet.syntaxProfiles": {
        "html": {
            "filters": "html,c"
        },
    },
    "emmet.preferences": {
        "filter.commentAfter": "<!-- /[#ID][.CLASS] -->"
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": false,
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "Novel.preview.lineLength": 41,
    "Novel.preview.linesPerPage": 17
}